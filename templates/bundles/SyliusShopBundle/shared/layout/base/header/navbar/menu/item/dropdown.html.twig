{% set taxon = hookable_metadata.context.taxon %}

<div class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow  border mt-4" tabindex="{{ taxon.id }}">
    {% for child_taxon in taxon.enabledChildren %}
        <a class="flex items-center gap-4" href="{{ path('sylius_shop_product_index', {'slug': child_taxon.slug, '_locale': child_taxon.translation.locale}) }}" {{ sylius_test_html_attribute('menu-item', child_taxon.name) }}>
            {{ child_taxon.name }}
        </a>
    {% endfor %}
</div>
