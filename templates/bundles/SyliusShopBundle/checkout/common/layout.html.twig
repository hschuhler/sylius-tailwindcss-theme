{% extends '@SyliusShop/shared/layout/base.html.twig' %}

{% block body %}
    <div class="flex flex-col min-h-screen overflow-hidden">
        <div class="bg-base border-b py-4 ">
            <div class="container">
                <div class="flex gap-6 justify-between items-center">
                    {% hook 'sylius_shop.checkout.common.header' with { order } %}
                </div>
            </div>
        </div>
        <div class="relative">
            <div class="container">
                <div class="grid grid-cols-12 tunnelHeight">
                    <div class="{{ active_step != 'complete' ? 'lg:col-span-7' }} col-span-12  pt-4 pb-5 lg:pr-[5rem]">
                        {% block content %}
                        {% endblock %}
                    </div>
                    {% block sidebar %}
                        <div class="col-span-12 lg:col-span-5 relative py-5">
                            {% hook 'sylius_shop.checkout.common.sidebar' with { order } %}
                            <div class="left-1/2 max-lg:-translate-x-1/2 w-screen lg:left-0 lg:w-[50vw] h-full bg-neutral absolute top-0 z-1"></div>
                        </div>
                        
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
