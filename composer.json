{
    "name": "agence-adeliom/sylius-tailwindcss-theme",
    "type": "sylius-plugin",
    "keywords": ["sylius", "sylius-plugin", "sylius-theme"],
    "description": "Tailwindcss and daisyUI Theme for Sylius",
    "license": "MIT",
    "authors": [
        {
            "name": "Community contributions",
            "homepage": "https://github.com/agence-adeliom/sylius-tailwindcss-theme/graphs/contributors"
        }
    ],
    "require": {
        "php": "~7.4|~8.0|~8.1|~8.2|~8.3|~8.4",
        "symfony/webpack-encore-bundle": "^1.12",
        "ext-json": "*",
        "ext-intl": "*",
        "sylius/sylius": ">=2.0.0"
    },
    "require-dev": {},
    "autoload-dev": {
        "psr-4": {
            "Tests\\TailwindTheme\\": "tests/PHPUnit/"
        }
    },
    "extra": {
        "sylius-theme": {
            "title": "Sylius Tailwind Theme"
        },
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/thanks": true
        }
    }
}
